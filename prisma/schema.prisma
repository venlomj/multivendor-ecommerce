generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SELLER
}

model User {
  id              String    @id @default(uuid())
  name            String
  email           String   @unique
  picture         String   @db.Text
  role            Role     @default(USER)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
